root = true

# Matches multiple files with brace expansion notation
# Set default charset
[*.{js,py}]
charset = utf-8

# 4 space indentation for python files
[*.{py,spec}]
indent_style = space
indent_size = 4

# 2 space indentation for ts tsx js json
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2
